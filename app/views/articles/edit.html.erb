<h1>This is EDIT page</h1>

<% if @article.errors.any? %>
<h2>Article couldn't be created due to the following errors</h2>
   <ul>
      <% @article.errors.full_messages.each do |msg| %>
         <li>
            <%= msg %>
         </li>
      <% end %>
   </ul>
<% end %>

<%= form_for @article do |a| %>

   <p>
      <%= a.label :title %><br>
      <%= a.text_field :title %>
   </p>
   <p>
      <%= a.label :description %><br>
      <%= a.text_area :description %>
   </p>
   <p>
      <%= a.submit %>
   </p>

<% end %>

<%= link_to "Go back to articles listing", articles_path %>